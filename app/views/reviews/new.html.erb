<div class="container">
<%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: (0..5) %>
      <%= f.submit "Submit", class:"btn btn-primary" %>
  <% end %>
</div>
<%= link_to "Back to the restaurant page", restaurant_path(@restaurant) %>
